<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- bases -->
  <ThingDef Name="FootwearMakeableBase" ParentName="ApparelMakeableBase" Abstract="True">
    <thingCategories>
      <li>Footwear</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Feet</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
    </apparel>
  </ThingDef>

  <ThingDef Name="FootArmorMakeableBase" ParentName="ArmorMachineableBase" Abstract="True">
    <thingCategories>
      <li>Footwear</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Feet</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
    </apparel>
  </ThingDef>

	<!-- ========== Shoes ========== -->

  <ThingDef ParentName="FootwearMakeableBase">
    <defName>Apparel_Shoes</defName>
    <label>shoes</label>
    <description>A basic, lightweight pair of shoes.</description>
    <graphicData>
      <texPath>Footwear/Shoes_OnMap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>30</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>2000</WorkToMake>
      <Mass>0.5</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
      <EquipDelay>1.0</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.05</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <tags>
        <li>Outlander</li>
        <li>Spacer</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

  	<!-- ========== Tribal Boots ========== -->

	<ThingDef ParentName="FootwearMakeableBase">
    <defName>Apparel_TribalBoots</defName>
    <label>tribal boots</label>
    <description>Large, rugged boots made out of animal hide.</description>
    <graphicData>
      <texPath>Footwear/TribalBoots_OnMap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Neolithic</techLevel>
    <costStuffCount>36</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>2500</WorkToMake>
      <Mass>0.5</Mass>
      <StuffEffectMultiplierArmor>0.25</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.1</StuffEffectMultiplierInsulation_Cold>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.04</MoveSpeed>
      <Insulation_Cold>-2</Insulation_Cold>
    </equippedStatOffsets>
    <apparel>
      <tags>
        <li>Tribal</li>
      </tags>
    </apparel>
    <recipeMaker>
			<recipeUsers>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
  </ThingDef>

  <!-- ========== Cowboy Boots ========== -->

  <ThingDef ParentName="FootwearMakeableBase">
    <defName>Apparel_CowboyBoots</defName>
    <label>cowboy boots</label>
    <description>A pair of stylish, hard-wearing cowboy boots.</description>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Footwear/CowboyBoots_OnMap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>55</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToMake>3500</WorkToMake>
      <Mass>1</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.1</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
    	<MoveSpeed>0.05</MoveSpeed>
      <SocialImpact>0.05</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <tags>
        <li>Outlander</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

  <!-- ========== Plated Boots ========== -->

  <ThingDef ParentName="FootArmorMakeableBase">
    <defName>Apparel_CombatBoots</defName>
    <label>plated boots</label>
    <description>Cumbersome boots that protect the feet from various forms of physical harm.</description>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Footwear/CombatBoots_OnMap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>70</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToMake>7200</WorkToMake>
      <Mass>5</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>1</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.36</ArmorRating_Blunt>
      <ArmorRating_Heat>0.27</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.025</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>0.5</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

  <!-- ========== Power Boots ========== -->

  <ThingDef ParentName="FootArmorMakeableBase">
    <defName>Apparel_PowerBoots</defName>
    <label>power boots</label>
    <description>Boots for a suit of powered armor.</description>
    <recipeMaker>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>9</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Footwear/CombatBoots_OnMap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>5</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>1.17</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.45</ArmorRating_Blunt>
      <ArmorRating_Heat>0.54</ArmorRating_Heat>
      <Insulation_Cold>25</Insulation_Cold>
      <Insulation_Heat>4</Insulation_Heat>
      <EquipDelay>15</EquipDelay>
    </statBases>
    <costList>
      <ComponentSpacer>1</ComponentSpacer>
      <Plasteel>10</Plasteel>
      <Uranium>2</Uranium>
    </costList>
    <apparel>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.9,0.9,0.9)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

</Defs>